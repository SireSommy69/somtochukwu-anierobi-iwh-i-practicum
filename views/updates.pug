doctype html
html
  head
    title= title
    link(rel="stylesheet" href="/css/style.css")
  body
    h1 Add a New Game
    form(action="/update-cobj" method="POST")
      label(for="game_name") Game Name:
      input(type="text" name="game_name" required)
      br
      label(for="model") Model:
      input(type="text" name="model" required)
      br
      label(for="color") Color:
      input(type="text" name="color" required)
      br
      label(for="release_year") Release Year:
      input(type="number" name="release_year" required)
      br
      label(for="price") Price ($):
      input(type="number" step="0.01" name="price" required)
      br
      button(type="submit") Submit
    br
    a(href="/") Return to Homepage
